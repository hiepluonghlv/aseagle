{% extends 'AseagleBundle::dashboard-layout.html.twig' %}

{% block dashboard_content %}

        <style>
            body {
                padding-top: 50px;
                padding-bottom: 20px;
            }

            #searchlist {
                max-height: 200px;
                overflow-y: hidden;
                overflow: auto;
            }

            .required:after {
                content: "*";
                padding-left:1%;
            }

        </style>


        <div class="container-fluid" style="width: 1200px">
            <div class="row">
                {% include 'AseagleBundle:Product:_form.html.twig' %}
                <!-- /.col-lg-6 (nested) -->
            </div>
        </div>

        <script src="{{ asset('bundles/framework/vendor/bootstrap/js/bootstrap-list-filter.min.js') }}"></script>
        <script src="{{ asset('bundles/framework/js/dashboard/upload.js') }}"></script>
        <script>
            $(function(){
                var _json_product = $.parseJSON('{{ json | raw }}');
                _AsgDashboard.Upload.set_form_edit_product(_json_product.cat_id,_json_product.d);
                // Load existing files:
                $('#fileupload').fileupload('option', 'done')
                        .call($('#fileupload'), $.Event('done'), {result: {files:_json_product.pic}});
            });
        </script>
    {% endblock %}
