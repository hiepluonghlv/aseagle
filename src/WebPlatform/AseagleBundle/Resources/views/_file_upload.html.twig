    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload-process.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload-image.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload-audio.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload-video.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload-validate.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/jquery.fileupload-ui.js') }}"></script>
    <script src="{{ asset('bundles/framework/js/jquery-file-upload/js/main.js') }}"></script>
